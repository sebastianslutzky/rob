@page "/"
@using Microsoft.Extensions.Logging
@using RestfulObjectApi.Representation.Types
@using Blazor.Extensions.Logging;
@using rob.Pages.ObjectViews;

@if(FocusObject != null){
    <IsisList Context="FocusObject"/> 
}

@code{
    [Inject]
    protected ActionInvocationService Invoker { get; set; }
         [Inject]
    protected ILogger<Index> logger{get;set;}

    private IsisObject _focusObject;
    private IsisObject FocusObject{
        get { return _focusObject;}
        set { 
            _focusObject = value;
            StateHasChanged();
            }}

  protected override async Task OnInitializedAsync(){
      this.Invoker.ActionInvoked += (s,e) => { 
          this.FocusObject = e.Result;
      };
    }
}
